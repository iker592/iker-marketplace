{
  "description": "Enforces pytest over unittest in Python projects",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/block-unittest.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
