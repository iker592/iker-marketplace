{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block_commit_on_main.sh",
            "statusMessage": "Checking branch for commit"
          }
        ]
      }
    ]
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Read",
      "Glob",
      "Grep",

      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(find:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "Bash(pwd)",
      "Bash(wc:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(du:*)",
      "Bash(df:*)",
      "Bash(echo:*)",
      "Bash(jq:*)",
      "Bash(date)",
      "Bash(uname:*)",
      "Bash(whoami)",
      "Bash(hostname)",

      "Bash(git status:*)",
      "Bash(git status)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git show:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(git describe:*)",
      "Bash(git stash list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git config:*)",

      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue status:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh repo view:*)",

      "Bash(git push:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr edit:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git switch:*)",
      "Bash(mkdir:*)"
    ],
    "deny": [
      "Bash(git push origin main:*)",
      "Bash(git push origin main)",
      "Bash(git push upstream main:*)",
      "Bash(git push upstream main)",
      "Bash(git push * main)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset:*)",
      "Bash(git checkout .)",
      "Bash(git restore:*)",
      "Bash(git clean:*)",
      "Bash(git rebase:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(rmdir:*)",
      "Bash(mv:*)",
      "Bash(chown:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr merge)"
    ]
  }
}
